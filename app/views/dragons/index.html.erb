<h1>Dragones</h1>
<p>Elige tu Atacante</p>


	<% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>

  <%= render "dragons/sidebar" %>

  
<ul>
<dl>
	<% for dragon in @dragons %>
	<dt id="link_player"><%= link_to "#{dragon.name}", edit_dragon_path(dragon) %></dt>
		<dd> Vida = <%= dragon.hit_points %>, Poder = <%= dragon.damage %> 
				<% if dragon.active? %>
			  <%= "Activo" %>
				<% else %> 
				Espera: <%= dragon.time_until_active %>
				<% end %>
		</dd>
		<dd> <%= @inactivity.to_s %> </dd>
														
		<ul>
		<%= link_to "Entrenar", practice_dragon_path(dragon) %>
		<%= link_to "Pelea",      choose_dragon_path(dragon) %>
	</ul>
	<% end %>

	</dl>
</ul>



